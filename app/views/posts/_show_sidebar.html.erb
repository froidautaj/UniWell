<div class="col-lg-3">
  <div class="sidebar">
    <div class="card card-item">
      <div class="card-body">
        <h3 class="fs-17 pb-3">Number Achievement</h3>
        <div class="divider"><span></span></div>
        <div class="row no-gutters text-center">
          <div class="col-lg-6 responsive-column-half">
            <div class="icon-box pt-3">
              <span class="fs-20 fw-bold text-color"><%= total_questions %></span>
              <p class="fs-14">Questions</p>
            </div><!-- end icon-box -->
          </div><!-- end col-lg-6 -->
          <div class="col-lg-6 responsive-column-half">
            <div class="icon-box pt-3">
              <span class="fs-20 fw-bold text-color-2"><%= total_answers %></span>
              <p class="fs-14">Answers</p>
            </div><!-- end icon-box -->
          </div><!-- end col-lg-6 -->
          <div class="col-lg-6 responsive-column-half">
            <div class="icon-box pt-3">
              <span class="fs-20 fw-bold text-color-3"><%= total_accepted_answers %></span>
              <p class="fs-14">Answer accepted</p>
            </div><!-- end icon-box -->
          </div><!-- end col-lg-6 -->
          <div class="col-lg-6 responsive-column-half">
            <div class="icon-box pt-3">
              <span class="fs-20 fw-bold text-color-4"><%= total_users %></span>
              <p class="fs-14">Users</p>
            </div><!-- end icon-box -->
          </div><!-- end col-lg-6 -->
          <% unless user_signed_in? %>
          <div class="col-lg-12 pt-3">
            <p class="fs-14">To get answer of question
            <%= link_to new_user_registration_path, class: 'text-color hover-underline' do %>
              Join<i class="la la-arrow-right ms-1"></i>
            <% end %>
            </p>
          </div>
          <% end %>
        </div><!-- end row -->
      </div>
    </div><!-- end card -->
    <%= render 'posts/partials/related_questions_and_tags' %>
  </div><!-- end sidebar -->
</div><!-- end col-lg-3 -->